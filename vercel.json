{
  "builds": [
    { "src": "app/package.json", "use": "@vercel/static-build", "config": { "distDir": "app/dist" } },
    { "src": "backend/server.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/server.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
